%aside#offcanvas-left.py-2
  .container-fluid
    .row
      .col-12
        - administrador_helper(self).engines.each do |_, engine|
          %h4= engine.name
          .list-group
            %a.list-group-item{:href => send(engine.router_name).root_path }
              %i.fas.fa-home
              %span.hidden-sm-down= t('.home')
            - engine.resources_controllers.each do |rc|
              %a.list-group-item{:href => send(engine.router_name).url_for(controller: "/#{rc.name.underscore.gsub('_controller', '')}", action: :index) }
                %i.fas.fa-folder
                %span.hidden-sm-down= rc.resource_class.model_name.human(count: :other)
            - engine.service_controllers.each do |sc|
              %a.list-group-item{:href => send(engine.router_name).url_for(controller: "/#{sc.name.underscore.gsub('_controller', '')}", action: :index) }
                %i.fas.fa-running
                %span.hidden-sm-down= rc.service_class.model_name.human(count: :other)