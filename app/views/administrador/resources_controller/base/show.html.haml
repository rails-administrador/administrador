.row
  .col-12
    %h1= administrador_helper(self).resource_title(@resource)

.row
  .col-12
    = render 'before_show_table', locals: { resource: @resource }
.row
  .col-12
    = resource_table(resource: @resource) do |table|
      = render 'show_table', table: table

.row
  .col-12
    = render 'after_show_table', locals: { resource: @resource }

  .col-12.d-flex
    = render partial: 'show_actions', locals: { resource: @resource }